<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.mycarplanner.Acceuil" >

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="action"
        android:layout_toLeftOf="@+id/car_button"
        android:text="Register" />

    <Button
        android:id="@+id/spending_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_button"
        android:onClick="action"
        android:text="Spending" />

    <Button
        android:id="@+id/fuel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/spending_button"
        android:layout_alignBottom="@+id/spending_button"
        android:layout_toRightOf="@+id/spending_button"
        android:text="Fuel" />

    <Button
        android:id="@+id/car_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/register_button"
        android:layout_alignBottom="@+id/register_button"
        android:layout_alignLeft="@+id/fuel_button"
        android:onClick="action"
        android:text="Car" />

    <Button
        android:id="@+id/delette_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spending_button"
        android:layout_alignRight="@+id/spending_button"
        android:layout_below="@+id/spending_button"
        android:onClick="action"
        android:text="Vider DB" />

</RelativeLayout>